#:kivy 1.10.1


<Button>:
    font_size: 15
    pos_hint: {'center_y': 0.05, 'center_x': 0.9}
    background_color: 0.1, 0.5, 0.6, 1
    size_hint: (.2, .1)



<MainScreen>:
    DrawingPad:
        id: drawpad
        canvas:
            Color:
                rgb: (255, 255, 255)
            Rectangle:
                size: self.size
                pos: self.pos
        size_hint: (.6, .3)
        pos_hint: {'center_y': 0.6, 'center_x': 0.5}


    Button:
        id: clearBut
        text: "Clear"
        pos_hint: {'center_y': 0.05, 'center_x': 0.1}
        on_press: drawpad.ClearPad()
        on_press: kanjiLabel.kanjiLabelClear()
        on_press: showBut.disabled = False
        disabled: True

    Button:
        id: showBut
        text: "Show\nKanji"
        pos_hint: {'center_y': 0.05, 'center_x': 0.5}
        background_color: 0.0, 0.9, 0.9, 1
        on_press: kanjiLabel.kanjiLabelChange()
        on_press: showBut.disabled = True
        disabled: True


    Button:
        id: shuffleBut
        text: "Shuffle"
        pos_hint: {'center_y': 0.05, 'center_x': 0.3}
        on_press: kanjiLabel.kanjiLabelClear()
        on_press: hiraganaLabel.hiraganaLabelChange()
        on_press: englishLabel.englishLabelChange()
        on_press: favBut.checkFav()
        on_press: root.kanjiNext()
        on_press: root.shuffleSet()
        on_press: drawpad.ClearPad()
        disabled: True


    Button:
        id: nextBut
        text: "Next"
        pos_hint: {'center_y': 0.05, 'center_x': 0.9}
        on_press: kanjiLabel.kanjiLabelClear()
        on_press: hiraganaLabel.hiraganaLabelChange()
        on_press: englishLabel.englishLabelChange()
        on_press: showBut.disabled = False
        on_press: clearBut.disabled = False
        on_press: favBut.disabled = False
        on_press: shuffleBut.disabled = False
        on_press: favBut.checkFav()
        on_press: root.kanjiNext()
        on_press: drawpad.ClearPad()


    favBut:
        id: favBut
        text: "Favorite"
        pos_hint: {'center_y': 0.05, 'center_x': 0.7}
        on_press: favBut.setFav()
        disabled: True



    kanjiLabel:
        id: kanjiLabel
        text: ""
        font_size: 30
        font_name: "yumin"
        pos_hint: {'center_y': 0.25, 'center_x': 0.5}
        size_hint: (.4, .5)

    hiraganaLabel:
        id: hiraganaLabel
        text: ""
        font_size: 30
        font_name: "yumin"
        pos_hint: {'center_y': 0.88, 'center_x': 0.5}
        size_hint: (.4, .5)


    englishLabel:
        id: englishLabel
        text: ""
        font_size: 30
        font_name: "yumin"
        pos_hint: {'center_y': 0.94, 'center_x': 0.5}
        size_hint: (.4, .5)


    Button:
        id: chooseKanji
        text: "Choose\nKanji"
        pos_hint: {'center_y': 0.15, 'center_x': 0.9}
        on_press: root.manager.transition.direction = 'left'
        on_press: root.manager.current = 'Kanji'
        disabled: False

        
<KanjiScreen>:
    Button:
        id: backButton
        text: "Back"
        pos_hint: {'center_y': 0.05, 'center_x': 0.9}
        on_press: root.manager.transition.direction = 'right'
        on_press: root.manager.current = 'Main'
        disabled: False

    englishLabel:
        id: constructionLabel
        text: "Page Under Construction"
        font_size: 30
        font_name: "yumin"
        pos_hint: {'center_y': 0.94, 'center_x': 0.5}
        size_hint: (.4, .5)